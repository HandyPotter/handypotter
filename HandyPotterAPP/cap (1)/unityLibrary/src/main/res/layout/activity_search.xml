<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="57dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/background"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="#87BCBF" />

            <TextView
                android:id="@+id/searchtext1"
                android:layout_width="260dp"
                android:layout_height="90dp"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="40dp"
                android:text="수어 사전\n검색하기"
                android:textColor="#FFFFFF"
                android:textSize="25dp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/search_field1"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/searchtext1"
                android:layout_alignStart="@+id/searchtext1"
                android:layout_alignLeft="@+id/searchtext1"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/search_layout"
                android:ems="10"
                android:hint="search"
                android:inputType="textPersonName"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingRight="20dp"
                android:paddingBottom="10dp"
                android:textColor="#999999"
                android:textSize="16sp" />


            <ImageButton
                android:id="@+id/searchBtn1"
                android:layout_width="40dp"
                android:layout_height="42dp"
                android:layout_toLeftOf="@+id/searchtext1"
                android:layout_alignLeft="@+id/search_field1"
                android:layout_marginLeft="220dp"
                android:background="@drawable/searchbtn_layout"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/search" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#FFFFFF">

            <ListView
                android:id="@+id/Dictionary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:divider="#d1d1d1"
                android:dividerHeight="2dp" />
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>